{
  "name": "hypnoscript-support",
  "displayName": "HypnoScript Support",
  "description": "A Language support extension for the esotheric language HypnoScript",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hypnoscript",
        "aliases": [
          "HypnoScript",
          "hypnoscript"
        ],
        "extensions": [
          ".hyp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypnoscript",
        "scopeName": "source.hypnoscript",
        "path": "./syntaxes/hypnoscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hypnoscript.startLanguageServer",
        "title": "Start HypnoScript Language Server"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.96.0"
  }
}
