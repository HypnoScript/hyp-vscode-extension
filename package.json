{
  "name": "hypnoscript-support",
  "displayName": "HypnoScript Support",
  "description": "A Language support extension for the esotheric language HypnoScript",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:hypnoscript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HypnoScript/vscode-extension.git"
  },
  "author": {
    "name": "HypnoScript Team",
    "email": "support@hypnose-stammtisch.de"
  },
  "scripts": {
    "compile": "tsc",
    "watch": "tsc --watch",
    "test": "npm run compile && node ./out/test/runTest.js",
    "pretest": "npm run compile",
    "package": "npx vsce package"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hypnoscript",
        "aliases": [
          "HypnoScript",
          "hypnoscript"
        ],
        "extensions": [
          ".hyp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypnoscript",
        "scopeName": "source.hypnoscript",
        "path": "./syntaxes/hypnoscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hypnoscript.startLanguageServer",
        "title": "Start HypnoScript Language Server"
      }
    ],
    "iconThemes": [
      {
        "id": "hypnoscript-icons",
        "label": "HypnoScript Icons",
        "path": "./icons/hypnoscript-icon-theme.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.96.0",
    "prettier": "^3.4.2"
  }
}
